---
const services = [
  {
    step: '01',
    name: 'Diseño',
    description:
      'Creamos propuestas visuales atractivas y funcionales, alineadas con la identidad y objetivos de tu empresa.',
  },
  {
    step: '02',
    name: 'Desarrollo',
    description:
      'Desarrollamos soluciones digitales robustas y escalables, adaptadas a tus necesidades y mercado.',
  },
  {
    step: '03',
    name: 'Mantenimiento',
    description:
      'Brindamos soporte y actualizaciones continuas para asegurar el óptimo funcionamiento de tus plataformas.',
  },
];
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-12 sm:gap-16">
  <h2 class="text-3xl font-medium tracking-tight sm:text-4xl font-heading">Servicios</h2>
      <div class="grid gap-8 lg:grid-cols-3">
        {
          services.map((service) => (
            <div class="flex flex-col gap-12 rounded-3xl bg-primary-500/10 px-6 py-8">
              <p class="text-sm">{service.step}</p>
              <div class="flex flex-col gap-4">
                <h3 class="text-xl font-medium font-heading">{service.name}</h3>
                <p class="text-base text-primary-950/70 sm:text-lg">
                  {service.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
